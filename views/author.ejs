<!--
    Display information about the author such as the profile image and name
    Display a list of Blog Post titles that link to each post
    Data passed in would be a single author entity, list of blog post entities
    -->
    <%- include ('partials/header'); %>
    <h4><%=author.name%></h4>
      <section id="author">
        <h3><img src = "<%=author.photo%>"></h3>
        <h3><%for(let i = 0; i < posts.length; i++){%>
        <% var post = posts[i];%>
        <div class = "blogPost">
          <h1><%=post.title%></h1>
          <h3><%=post.type%></h3>
          <h3>Ingredients:</h3>
          <h4><%=post.ingredients%></h4>
          <h3>Instructions: </h3>
          <p><%=post.instructions%></p>
        </div>
        <%}%></h3>

    </section>


      <%- include ('partials/footer');  %>
    </body>

    </html>
