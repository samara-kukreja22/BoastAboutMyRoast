<!--
  A list/table of recipe titles alongside their calculated popularity score
  Requires the list of recipes and the popularity score
  -->
  <!doctype html>
  <html lang="en">

  <head>
    <meta charset="utf-8" />
    <title>Author</title>
    <meta name="author" content="Samara">
    <meta name="description" content="A visual representation of Plastic Waste by Country">
    <meta content="text/html" http-equiv="Content-type" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <%- include ('partials/navbar'); %>
    <%- include ('partials/header'); %>
    <h2>Trending</h2>
    <table>
      <tr>
        <th>
          Recipes
        </th>
        <th>
          Trending %
        </th>
        <th>
          Author
        </th>
      </tr>
      <!-- for loop -->
      <tr>
        <th>
          <!-- the recipe name -->
        </th>
        <th>
          <!-- the popularity percentage -->
        </th>
        <th>
          <!-- link to author page of their recipes... -->
          <%for(let i = 0; i < author.length; i++){%>
            <a href="/author/<%=author[i].name%>"><%=author[i].name%></a>
          <%}%>
        </th>
      </tr>
    </table>
    <%- include ('partials/footer');  %>
</body>
</html>
